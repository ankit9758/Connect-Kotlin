<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TvsConnectDemo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.NoActionbar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/gray_bdb9b9</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="android:windowFullscreen">false</item>
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>
    <style name="TextLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="onboarding_edit_text">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginStart">@dimen/_10sdp</item>
        <item name="android:hint">@string/enter_phone_number</item>
        <item name="android:inputType">phone</item>
        <item name="android:maxLength">10</item>
        <item name="android:textSize">@dimen/_12ssp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/color_111111</item>
    </style>
    <style name="button_onboarding_continue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54dp</item>
        <item name="android:layout_marginTop">@dimen/_15sdp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:text">@string/btn_continue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">@drawable/bg_onboarding_login_button</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="onboarding_terms_title_without_left_margin" parent="onboarding_terms_title">
        <item name="android:layout_marginStart">@dimen/margin_0</item>
        <item name="android:layout_marginBottom">@dimen/login_screen_bottom_margin</item>
    </style>
    <style name="onboarding_terms_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:layout_marginStart">@dimen/_3sdp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="SFMedium703A" parent="WrapSize">
        <item name="android:textSize">@dimen/font_23</item>
        <item name="android:textColor">@color/black_3A3A3A</item>
        <item name="android:fontFamily">@font/sfprodisplay_medium</item>
    </style>

    <style name="SFRegular4060" parent="WrapSize">
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:textColor">@color/gray_606370</item>
        <item name="android:fontFamily">@font/sfprodisplay_regular</item>
    </style>
    <style name="WrapSize">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextFieldInputLayout" parent="MatchWidth">
        <item name="android:layout_width">@dimen/margin_250</item>
        <item name="android:layout_height">@dimen/margin_48</item>
        <item name="android:paddingStart">@dimen/margin_15</item>
        <item name="android:background">@drawable/bg_found_et</item>
        <item name="android:paddingEnd">@dimen/margin_15</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:layout_marginStart">@dimen/margin_8</item>
        <item name="android:layout_marginEnd">@dimen/margin_15</item>
        <item name="android:fontFamily">@font/sfprodisplay_regular</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/gray_909090</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:paddingTop">5dp</item>
    </style>
    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="ErrorField_SignUp" parent="MatchWidth">
        <item name="android:fontFamily">@font/sfprodisplay_regular</item>
        <item name="android:textColor">@color/Red_F2081C</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginTop">@dimen/margin_5</item>
        <item name="android:layout_marginStart">@dimen/margin_9</item>
        <item name="android:layout_marginEnd">@dimen/margin_9</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/font_12</item>


    </style>
    <style name="EditTextFieldText" parent="MatchWidth">
        <item name="android:fontFamily">@font/sfprodisplay_regular</item>
        <item name="android:textColor">@color/black_3A3A3A</item>
        <item name="android:textColorHint">@color/gray_909090</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">3dp</item>
    </style>

    <style name="sfProdisplayMedium40" parent="WrapSize">
        <item name="android:fontFamily">@font/sfprodisplay_medium</item>
        <item name="android:textColor">@color/black_3A3A3A</item>
        <item name="android:textSize">@dimen/font_14</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>
    <style name="SFRegular45white" parent="WrapSize">
        <item name="android:textSize">@dimen/font_15</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/sfprodisplay_regular</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="FBGPLusButton" parent="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/margin_70</item>
    </style>
    <style name="FBGPLusButtonSetting" parent="FBGPLusButton">
        <item name="android:layout_height">@dimen/margin_85</item>

    </style>
</resources>